<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.ndt.empleos.registrar"
    android:background="@drawable/fondo">
    <TextView
        android:id="@+id/label_a"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="registre un trabajo para profesionista"
        android:textColor="#0d0c0c"
        android:textSize="20dp" />
    <Button
        android:id="@+id/registraProfesionista"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/label_a"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="1dip"
        android:text="registrar profesionista"
        android:onClick="ingreProfesionista" />
    <TextView
        android:id="@+id/respuesta"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/registraProfesionista"
        android:text="registre un trabajo para tecnico"
        android:textSize="20dp"
        android:textColor="#080808" />
    <Button
        android:id="@+id/registraTecnico"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/respuesta"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="1dip"
        android:text="registrar tecnico"
        android:onClick="ingreTecnico" />
    <TextView
        android:id="@+id/label_b"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/registraTecnico"
        android:text="registre un trabajo para estudiante"
        android:textSize="20dp"
        android:textColor="#080808" />
    <Button
        android:id="@+id/registraFormal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/label_b"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="1dip"
        android:text="registrar estudiante"
        android:onClick="ingresaEstudiante" />

</RelativeLayout>
