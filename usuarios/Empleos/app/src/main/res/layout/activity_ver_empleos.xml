<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.ndt.empleos.verEmpleos"
    android:background="@drawable/fondo">
    <TextView
        android:id="@+id/label_ver"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="ver empleos de profesionistas:"
        android:textColor="#0d0c0c"
        android:textSize="20dp" />
    <Button
        android:id="@+id/verProfesionista"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/label_ver"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="1dip"
        android:text="ver profesionista"
        android:onClick="verProfesionista" />
    <TextView
        android:id="@+id/label_verA"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/verProfesionista"
        android:text="ver empleos de tecnicos"
        android:textSize="20dp"
        android:textColor="#060606" />
    <Button
        android:id="@+id/verTecnico"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/label_verA"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="1dip"
        android:text="ver tecnico"
        android:onClick="verTecnicos" />
</RelativeLayout>
